{
	"compilerOptions": {
		"lib": ["esnext", "dom"],
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"target": "ESNext",
		"module": "preserve",
		"moduleResolution": "Bundler",
		"baseUrl": ".",
		"rootDir": "./src",
		"paths": {
			"@/*": ["./src/*"]
		},
		"typeRoots": ["src/types", "node_modules/@types"]
	},
	"include": ["src"],
	"exclude": ["dist", "src/test", ".tsup"]
}
